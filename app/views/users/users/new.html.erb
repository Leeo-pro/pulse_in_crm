<% provide(:title, "ユーザー登録") %>
<% provide(:btn_text, "登録") %>

<div class="card">
  <div class="card-body">
    <%= form_with model: @user, url: users_users_path, method: :post, local: true do |f| %>
      <%= render partial: "form", locals: { f: f, user: @user } %>
      
      <%= f.submit yield(:btn_text), class: "btn btn-md btn-block btn-primary" %>
      <%= link_to "一覧画面へ", users_users_path, class: "btn btn-md btn-block btn-default" %>
    <% end %>
  </div>
</div>
