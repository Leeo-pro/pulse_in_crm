<% provide(:title, "ユーザー詳細") %>

<div class="card">
  <div class="card-body table-responsive p-0">
    <table class="table table-hover text-nowrap">
      <tbody>
        <tr>
          <th><%= User.human_attribute_name(:name) %></th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th><%= User.human_attribute_name(:email) %></th>
          <td><%= @user.email %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="card-footer">
    <%= link_to "編集", edit_users_user_path, class: "btn btn-md btn-block btn-success" %>
    <%= link_to "一覧画面へ", users_users_path, class: "btn btn-md btn-block btn-default" %>
  </div>
</div>
