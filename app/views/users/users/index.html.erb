<% provide(:title,  "ユーザー一覧") %>

<%= link_to "ユーザー新規作成画面へ", new_users_user_path, class: "btn btn-lg btn-block btn-outline-primary" %>
<br>
<% if @users.present? %>
  <div class="card">
    <div class="card-body table-responsive p-0">
      <table class="table table-hover text-nowrap">
        <thead>
          <tr align="center">
            <th><%= User.human_attribute_name(:name) %></th>
            <th><%= User.human_attribute_name(:email) %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr align="center">
            <td><%= link_to user.name, users_user_path(user) %></td>
            <td><%= user.email %></td>
            <td><%= link_to "削除", users_user_path(user), method: :delete, data: { confirm: "#{user.name}のユーザー情報を削除します。本当によろしいですか？" }, class: "btn btn-md btn-danger" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>