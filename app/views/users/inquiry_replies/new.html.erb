<div class="container">
  <h2 class="my-3 ml-3">
    返信メール作成
  </h2>
  <div class="row">
    <div class="col-sm-10 mx-auto">

      <%= form_with model: @inquiry_reply, url: users_inquiry_reply_path, local: true do |f| %>
      <!--エラーメッセージ部分-->
      <%= render 'layouts/error_messages', model: f.object %>

          <%= f.label :to_email, 'メールアドレス' %><br>
          <!--ビューに表示させている部分-->
          <%= @inquiry_reply.to_email %>
          <!--データの受け渡しに必要-->
          <%= f.hidden_field :to_email, :value => @inquiry_reply.to_email %>

        <div class="form-group">
          <%= f.label :title, 'タイトル' %><br>
          <%= f.text_field :title, autofocus: true, placeholder:'返信メールタイトル', class:'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :content, '返信内容' %><br>
          <%= f.text_area :content, placeholder:'返信内容を記載', class:'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :file, '添付ファイル' %><br>
          <%= f.file_field :file, class:'form-control' %>
        </div>
        <div class="d-flex justify-content-center mb-5">
          <%= f.submit 'メール送信', class:'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>