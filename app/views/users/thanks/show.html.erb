<% provide(:title, "お問い合せ完了") %>
<% provide(:btn_text, "戻る") %>

<h1>お問い合わせが送信されました</h1>
<div class="card">
  <div class="card-body table-responsive p-0">
    <table class="table table-hover text-nowrap">
      <tbody>
        <% if @thank.blank? %>
          <%= render partial: "default" %>
        <% else %>
          <tr>
            <td><%= simple_format @thank.thank %></td>
          </tr>
        <% end%>
      </tbody>
    </table>
  </div>
  <div class="card-footer">
    <%= link_to yield(:btn_text),'javascript:history.back()', class: "btn btn-md btn-block btn-default" %>
  </div>
</div>
